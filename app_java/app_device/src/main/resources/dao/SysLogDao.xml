<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.device.dao.ISysLogDao">
    <resultMap id="BaseResultMap" type="com.app.device.domain.SysLog.SysLogPo">
        <result column="log_id" property="logId" jdbcType="INTEGER"/>
        <result column="m_id" property="mId" jdbcType="INTEGER"/>
        <result column="module" property="module" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="log_type" property="logType" jdbcType="INTEGER"/>
        <result column="msg" property="msg" jdbcType="VARCHAR"/>
        <result column="user_name" property="userName" jdbcType="VARCHAR"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="url" property="url" jdbcType="VARCHAR"/>
        <result column="ip" property="ip" jdbcType="VARCHAR"/>
        <result column="method" property="method" jdbcType="VARCHAR"/>
        <result column="param" property="param" jdbcType="LONGVARCHAR"/>
        <result column="return_value" property="returnValue" jdbcType="LONGVARCHAR"/>

        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <!-- 用来记录分页查询时的所有数据量，避免出现分页查询时需要查询两次 -->
    <resultMap type="java.lang.Long" id="logCount">
        <result column="total"/>
    </resultMap>
    <sql id="Example_Where_Clause">
        <where>
            <foreach collection="oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.noInfo">
                                    ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Update_By_Example_Where_Clause">
        <where>
            <foreach collection="example.oredCriteria" item="criteria" separator="or">
                <if test="criteria.valid">
                    <trim prefix="(" prefixOverrides="and" suffix=")">
                        <foreach collection="criteria.criteria" item="criterion">
                            <choose>
                                <when test="criterion.noValue">
                                    and ${criterion.condition}
                                </when>
                                <when test="criterion.singleValue">
                                    and ${criterion.condition} #{criterion.value}
                                </when>
                                <when test="criterion.betweenValue">
                                    and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                                </when>
                                <when test="criterion.listValue">
                                    and ${criterion.condition}
                                    <foreach close=")" collection="criterion.value" item="listItem" open="("
                                             separator=",">
                                        #{listItem}
                                    </foreach>
                                </when>
                            </choose>
                        </foreach>
                    </trim>
                </if>
            </foreach>
        </where>
    </sql>
    <sql id="Base_Column_List">
        log_id, m_id, module, `type`, log_type, msg, user_name,ip,user_id,user_name
    </sql>
    <sql id="Expend_Column_List">
        create_time, update_time,url, method, param, return_value
    </sql>
    <sql id="All_Column_List">
        log_id, m_id, module, `type`, log_type, msg,user_id, user_name,ip, url, method, param, return_value, create_time, update_time
    </sql>
    <select id="getPageSysLog" parameterType="com.app.device.domain.SysLog.SysLogQuery"
            resultMap="BaseResultMap,logCount">
        select
        <if test="distinct">
            distinct
        </if>
        <include refid="Base_Column_List"/>
        ,
        <include refid="Expend_Column_List"/>
        from sys_log
        <if test="_parameter != null">
            <include refid="Example_Where_Clause"/>
        </if>
        <if test="orderByClause != null">
            order by ${orderByClause}
        </if>
        <if test="pageNumAndSize != null">
            LIMIT ${pageNumAndSize}
        </if>
        ;
        SELECT count(1) AS total from sys_log
        <if test="_parameter != null">
            <include refid="Example_Where_Clause"/>
        </if>;
    </select>
    <insert id="addInfo" parameterType="com.app.device.domain.SysLog.SysLogPo" keyProperty="logId"
            useGeneratedKeys="true">
        <selectKey keyProperty="logId" keyColumn="user_id" order="BEFORE" resultType="java.lang.Integer">
            SELECT NEXTVAL('logSeq') AS logId;
        </selectKey>
        insert into sys_log (log_id,user_name, m_id, module,
                             `type`, log_type, msg,ip,user_id, url, method, param, return_value, create_time)
        values (#{logId,jdbcType=INTEGER}, #{userName,jdbcType=INTEGER}, #{mId,jdbcType=INTEGER},
        #{module,jdbcType=VARCHAR}, #{type,jdbcType=INTEGER},#{logType,jdbcType=INTEGER},#{msg,jdbcType=VARCHAR},
        #{ip,jdbcType=VARCHAR}, #{userId,jdbcType=INTEGER},#{url,jdbcType=VARCHAR},#{method,jdbcType=VARCHAR},#{param,jdbcType=LONGVARCHAR},#{returnValue,jdbcType=LONGVARCHAR}, NOW())
    </insert>
    <update id="updateByExampleSelective" parameterType="map">
        update sys_log
        <set>
            <if test="record != null and record.userName != null">
                user_name = #{record.userName,jdbcType=VARCHAR},
            </if>
            <if test="record != null and record.module != null">
                module = #{record.module,jdbcType=VARCHAR},
            </if>
            <if test="record != null and record.msg != null">
                msg = #{record.msg,jdbcType=VARCHAR},
            </if>
            <if test="record != null and record.type != null">
                type = #{record.type,jdbcType=INTEGER},
            </if>
            <if test="record != null and record.updateTime != null">
                update_time = #{record.updateTime,jdbcType=TIMESTAMP},
            </if>
        </set>
        <if test="_parameter != null">
            <include refid="Update_By_Example_Where_Clause"/>
        </if>
    </update>
    <delete id="deleteByExample" parameterType="com.app.device.domain.SysLog.SysLogQuery">
        delete from sys_log
        <if test="_parameter != null">
            <include refid="Example_Where_Clause"/>
        </if>
    </delete>
    <delete id="deleteByExitDay" >
        DELETE from sys_log
        WHERE DATE_ADD(create_time, INTERVAL (
        SELECT param_val
        FROM sys_param
        WHERE param_type='log' AND param_code='exit_day')  DAY) &lt; NOW()
    </delete>
    <select id="selectBySysLogId" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="All_Column_List"/>
        from sys_log
        where log_id = #{logId,jdbcType=INTEGER }
    </select>
    <select id="findByUsername" resultMap="BaseResultMap" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List"/>
        from sys_log
        where user_name = #{userName,jdbcType=VARCHAR }
    </select>
    <select id="findList"  parameterType="com.app.device.domain.SysLog.SysLogQuery"
            resultMap="BaseResultMap">
        select
        <include refid="All_Column_List"/>
        from sys_log
        <if test="_parameter != null">
            <include refid="Example_Where_Clause"/>
        </if>;
    </select>
</mapper>